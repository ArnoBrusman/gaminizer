{% block header_loader %}
    {{ page.add_script('abilities', 'sheet/abilities.js', {require : "rpgtjs"}) }}
    {{ page.add_script('abilities_init', 'sheet/abilities_init.js', {require : "rpgtjs"}) }}
    {{ page.add_style('sheet/abilities.css') }}
{% endblock %}

{% block view_template %}
<script id="ability_scores_item_template" type="text/html">
    <div class="item_<%= key %>">
        <label for="<%= key %>_score">
            <b><%= key %></b>
            <span class="modifier"><% if (calc_ability_mod(score) > 0) { print('+'); } print(calc_ability_mod(score)); %></span>
        </label>

        <input data-id="<%= id %>" id="<%= key %>_score" class="item_input" value='<%= score %>'>
    </div>
</script>
{% endblock %}